{
  "compilerOptions": {
    "target": "es2017",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "./src/**/*.ts"
  ]
}
